# Auth0 Environment Variables Template
# Copy this file to .env and fill in your Auth0 application details

# ===== AUTH0 CREDENTIALS =====
# Get these from your Auth0 Dashboard

# Your Auth0 Application's Client ID
AUTH0_CLIENT_ID=your_client_id_here

# Your Auth0 Application's Client Secret
# ⚠️ IMPORTANT: Keep this secret! Never commit to version control!
AUTH0_CLIENT_SECRET=your_client_secret_here

# Your Auth0 Domain (e.g., dev-abc123.us.auth0.com)
AUTH0_DOMAIN=your_domain_here

# ===== APPLICATION SETTINGS =====

# Secret key for Flask session encryption
# Generate a random string: python -c "import secrets; print(secrets.token_hex(32))"
APP_SECRET_KEY=your_secret_key_here

# Audience for your API (or Auth0's userinfo endpoint)
# Option 1 (Default): https://{your_domain}/userinfo
# Option 2 (Custom API): Your API identifier from Auth0
AUDIENCE=https://your_domain_here/userinfo

# ===== SERVER SETTINGS =====

# Port to run the Flask application on (default: 3000)
PORT=3000

# Environment type: development or production
# Set to 'production' when deploying
ENVIRONMENT=development
